generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model product {
  id              Int      @id @default(autoincrement())
  title           String
  category        Int
  description     String
  price           Int
  newPrice        Int?
  mainImage       String
  secondaryImages String
  old_url         String
  created_at      DateTime? @default(now())
  updated_at      DateTime? @updatedAt
}

model order {
  id         Int      @id @default(autoincrement())
  products   String
  info       String
  status     String
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}
